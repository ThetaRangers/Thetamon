<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MyApp.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>

        <!-- Overlay the Toolbar-->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/corners_top</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="behavior_skipCollapsed">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

</resources>
